script.Parent = game.LocalPlayer.PlayerGui:WaitForChild("HorseHub")
script.Parent.ScriptButton.Parent = script
script.ScriptButton.Visible = true
local pages = {script.Parent.Main.HomePage,script.Parent.Main.SettingsPage,script.Parent.Main.ScriptsPage,script.Parent.Main.StatusPage}
local Scriptdesk = {{"Infinite Yield",'https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'}}
function Loadstring(url)
	print("Horse Hub: Loading: "..url)
	loadstring(game:HttpGet((url),true))()
end
function Page(Page)
	for i,pg in pairs(pages) do
		pg.Visible = false
	end
	pages[Page].Visible = true
end
function tweenbuttoncolor(Button,increase)
	local buttoncolor = Button.BackgroundColor3
	Button.MouseEnter:Connect(function()game:GetService("TweenService"):Create(Button, TweenInfo.new(0.3, Enum.EasingStyle.Sine), {BackgroundColor3 = Color3.fromRGB(buttoncolor.R+increase, buttoncolor.G+increase, buttoncolor.B+increase)}):Play()end)
	Button.MouseLeave:Connect(function()game:GetService("TweenService"):Create(Button, TweenInfo.new(0.3, Enum.EasingStyle.Sine), {BackgroundColor3 = buttoncolor}):Play()end)
end
function scriptsetup()
	for i,Script in pairs(Scriptdesk) do
		print(Script[1],Script[2])
		local scriptbutton = script.ScriptButton:Clone()
		scriptbutton.MouseButton1Click:Connect(function()Loadstring(Script[2])end)
		scriptbutton.Text = Script[1]
		tweenbuttoncolor(scriptbutton.bg,100)
		scriptbutton.Parent = pages[3].List
	end
end
scriptsetup()
script.Parent.Main.Side.Home.MouseButton1Click:Connect(function()Page(1)end)
tweenbuttoncolor(script.Parent.Main.Side.Home.bg,80)
script.Parent.Main.Side.Settings.MouseButton1Click:Connect(function()Page(2)end)
tweenbuttoncolor(script.Parent.Main.Side.Settings.bg,80)
script.Parent.Main.Side.Scripts.MouseButton1Click:Connect(function()Page(3)end)
tweenbuttoncolor(script.Parent.Main.Side.Scripts.bg,80)
script.Parent.Main.Side.Status.MouseButton1Click:Connect(function()Page(4)end)
tweenbuttoncolor(script.Parent.Main.Side.Status.bg,80)
